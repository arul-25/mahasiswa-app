<div class="container">
	<div class="box-nav d-flex justify-between">
		<div class="filter">
			<a href="/jurusan"><i class="fas fa-angle-double-left"></i> Semua Jurusan</a>
		</div>
	</div>
	<div class="form-title text-center">
		<h2 class="text-dark">Edit Jurusan</h2>
		<span class="text-light">Gunakan formulir dibawah ini untuk mengedit jurusan</span>
	</div>

	<!-- form handling -->
	<form action="/jurusan/<%= jurusan.slug %>/update?_method=PUT" method="POST" id="tambah">
		<div class="new_user">
			<div class="form-group-2">
				<label for="" class="text-light">Pilih Fakultas</label>
				<div>
					<select name="fakultas" id="fakultas" class="capitalize">
						<% for(let i =0; i < fakultas.length; i++) { %>
						<option <%= jurusan.fakultas == fakultas[i].fakultas ? "selected" : "" %> value="<%= fakultas[i].fakultas %>"><%= fakultas[i].fakultas %></option>
						<%}%>
					</select>
					<% if (error[0]?.fakultas) {%>
					<span class="invalid-feedback"><%- error[0].fakultas.msg %></span>
					<%}%>
				</div>
			</div>

			<div class="form-group-2">
				<label for="jurusan" class="text-light">Jurusan</label>
				<div>
					<input type="text" name="jurusan" class="width-50" value="<%= jurusan.jurusan %>" placeholder="Teknik Informatika" />
					<% if (error[0]?.jurusan) {%>
					<span class="invalid-feedback"><%- error[0].jurusan.msg %></span>
					<%}%>
				</div>
			</div>

			<div class="form-group-2">
				<button type="submit" class="btn text-dark update">Save</button>
			</div>
		</div>
	</form>
</div>
